<%
  statusColors = {
    'active' => 'success',
    'suspense' => 'danger',
    'dispute' => 'warning',
    'archived' => 'danger'
  }
%>

<table class="table table-borderless">
  <tbody>
    <tr>
      <td width="35%"><%= t('activerecord.attributes.license.company_name') %></td>
      <td><%= @license.company_name %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.owner_name') %></td>
      <td><%= @license.owner_name %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.number') %></td>
      <td><%= @license.number %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.issued_date') %></td>
      <td><%= l @license.issued_date %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.license_type') %></td>
      <td><%= t("license_types.#{@license.license_type}") %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.area') %></td>
      <td><%= t('inline_area_with_unit', area: @license.area, unit: t("area_units.#{@license.area_unit}")) %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.province') %></td>
      <td><%= t("provinces.#{@license.province}") %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.address') %></td>
      <td><%= @license.address %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.valid_date') %></td>
      <td><%= l @license.valid_date %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.expires_date') %></td>
      <td><%= l @license.expires_date %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.status') %></td>
      <td><span class="badge badge-<%= statusColors[@license.status] %> p-2"><%= t("statuses.#{@license.status}") %></span></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.license.note') %></td>
      <td><%= @license.note %></td>
    </tr>
  </tbody>
</table>
