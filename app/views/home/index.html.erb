<div class="row">
  <div class="col-4 offset-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title text-center mb-4"><%= t('menu') %></h1>
        <hr />
        <div class="row mt-4 mb-4">
          <div class="col-12 text-center">
            <%= link_to License.model_name.human(count: 2), licenses_path, class: 'w-100 btn btn-primary btn-lg' %>
          </div>
        </div>
        <div class="row mt-4 mb-4">
          <div class="col-12 text-center">
            <%= link_to t('create_license'), new_license_path, class: 'w-100 btn btn-primary btn-lg' %>
          </div>
        </div>
        <div class="row mt-4 mb-4">
          <div class="col-12 text-center">
            <%= link_to t('search_license'), search_path, class: 'w-100 btn btn-primary btn-lg' %>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-12 text-center">
            <%= link_to t('download_csv'), licenses_path(format: :csv), class: 'w-100 btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
