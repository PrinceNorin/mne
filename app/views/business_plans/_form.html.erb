<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center"><%= title %></h3>
        <hr />

        <%= simple_form_for @business_plan, url: license_business_plan_path(@license), defaults: { input_html: { class: 'form-control' } } do |f| %>
          <%= f.error_notification %>

          <div class="form-row">
            <%= f.input :budget, wrapper_html: { class: 'col-md-3' } %>
            <%= f.input :currency, collection: BusinessPlan.currency_select,
                include_blank: false, wrapper_html: { class: 'col-md-2' } %>
            <%= f.input :employees, wrapper_html: { class: 'col-md-7' } %>
          </div>

          <%= f.simple_fields_for :contents do |field| %>
            <div class="form-row">
              <%= field.input :year, wrapper_html: { class: 'col-md-3' },
                label: t('activerecord.attributes.business_plan.contents.year') %>
              <%= field.input :plan, wrapper_html: { class: 'col-md-9' },
                label: t('activerecord.attributes.business_plan.contents.plan') %>
            </div>
          <% end %>

          <div class="form-row">
            <%= f.input :note, wrapper_html: { class: 'col-md-12' }, input_html: { rows: 10 } %>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12 clearfix">
              <%= f.button :submit, @business_plan.new_record? ? t('create') : t('update'), class: 'btn btn-lg btn-primary float-right' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
