<div class="row">
  <div class="col-4 offset-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title text-center mb-4"><%= t('download_tax_csv') %></h1><hr />

        <div class="row mb-4">
          <div class="col-12">
            <%= search_form_for @q, url: tax_download_path(format: :xlsx), class: 'form' do |f| %>
              <div class="form-group">
                <%= f.select :year_eq, year_options, { include_blank: t('select_option'), selected: Date.current.year }, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.submit t('download_tax_csv'), class: 'form-control btn btn-primary btn-lg' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.form').on('submit', function() {
    var self = this;
    setTimeout(function() {
      $(self).find('input[type=submit]').attr('disabled', false);
    }, 500)
  });
</script>
