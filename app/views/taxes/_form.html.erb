<div class="row mb-2">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title text-center"><%= title %></h1>
        <hr />

        <%= simple_form_for [@license, tax], defaults: { input_html: { class: 'form-control' } } do |f| %>
          <%= f.error_notification %>

          <div class="form-row">
            <% year = tax.year || Date.current.year %>
            <% month = tax.month || Tax.months.keys[Date.current.month - 1] %>
            <%= f.input :year, collection: year_options, include_blank: false, selected: year, wrapper_html: { class: 'col-md-3' } %>
            <%= f.input :month, collection: Tax.month_select, include_blank: false, selected: month, wrapper_html: { class: 'col-md-2' } %>
            <%= f.input :unit, wrapper_html: { class: 'col-md-3' } %>
            <%= f.input :total, wrapper_html: { class: 'col-md-3' } %>
            <%= f.hidden_field :tax_type %>
            <div class="form-group col-md-1">
              <label style="visibility: hidden">*</label>
              <%= f.button :submit, tax.new_record? ? t('create') : t('update'), class: 'form-control btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
